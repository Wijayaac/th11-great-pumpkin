{% sw_extends '@Storefront/storefront/layout/header/logo.html.twig' %}

{% block layout_header_logo_link %}
	<a class="header-logo-main-link" href="{{ path('frontend.home.page') }}" title="{{ "header.logoLink"|trans|striptags }}">
		{% block layout_header_logo_image %}
			<picture>
				{% block layout_header_logo_image_tablet %}
					{% if shopware.theme['sw-logo-tablet'] and shopware.theme['sw-logo-tablet'] != shopware.theme['sw-logo-desktop'] %}
						<source srcset="{{ shopware.theme['sw-logo-tablet'] |sw_encode_url }}" media="(min-width: {{ shopware.theme.breakpoint.md }}px) and (max-width: {{ shopware.theme.breakpoint.lg - 1 }}px)">
					{% endif %}
				{% endblock %}

				{% block layout_header_logo_image_mobile %}
					{% if shopware.theme['sw-logo-mobile'] and shopware.theme['sw-logo-mobile'] != shopware.theme['sw-logo-desktop'] %}
						<source srcset="{{ shopware.theme['sw-logo-mobile'] |sw_encode_url }}" media="(max-width: {{ shopware.theme.breakpoint.md - 1 }}px)">
					{% endif %}
				{% endblock %}

				{% block layout_header_logo_image_default %}
					{# {% if shopware.theme['sw-logo-desktop'] %} #}
					{# TODO: Change to config source image from backend  #}
				<img
					src="https://res.cloudinary.com/portfolio-wij/image/upload/v1704156894/image_gdygho.png" alt="Great Pumpkin Logo " class="img-fluid header-logo-main-img"/> {# {% endif %} #}
				{% endblock %}
			</picture>
		{% endblock %}
	</a>
{% endblock %}
