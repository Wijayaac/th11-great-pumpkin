								<img class="gp-achievement-list__item-image" src="{{ asset('bundles/thstarterplugin/trophy.png', 'asset') }}">
								<div data-cms-element-id="{{ element.id }}" class="gp-achievement-list__item-content">
									{% sw_include "@Storefront/storefront/element/cms-element-" ~ element.type ~ ".html.twig" ignore missing %}
